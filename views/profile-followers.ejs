<%- include('includes/header') %>
<%- include('includes/bg') %>

<div class="box-container-2 container py-md-5 container--narrow">

  <%- include('includes/flash') %>

  <%- include('includes/profileShared') %>    
  
    <div class="list-group">

        <% followers.forEach(function(follower){ %>
        <a href="/profile/<%= follower.username %>" class="list-group-item list-group-item-action">
            <img class="avatar-tiny" style="background-color: <%= String(follower.avatarbgcolor) %>;" src="<%= follower.avatar %>">
            <strong><%= follower.avatarnameFull %></strong> 
        </a>  
        <% }) %>

    </div>
  </div>

  <%- include('includes/footer') %>