<%- include('includes/header') %>
<%- include('includes/bg') %>

<div class="container container--narrow align-items-center p-2"><div><%- include('includes/flash') %></div></div> 
  
<div class="box-container-2 container py-md-5 container--narrow">

  <form action="/post/<%= post._id %>/edit" method="POST">
    <div class="form-group">
      <label for="post-title" class="mb-1"><small>Title</small></label>
      <input required name="title" value="<%= post.title %>" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
    </div>

    <div class="form-group">
      <label for="post-body" class="mb-1"><small>Body Content</small></label>
      <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%= post.body %></textarea>
    </div>

    <select required name="greeting" id="post=greeting" class="form-control form-control-lg">
        <option value="greeting-starter-foredits" selected hidden>Update greeting here</option>
        <option value="greeting-0">Greetings!</option>
        <option value="greeting-1">Hello</option>
        <option value="greeting-2">Meow there!</option>
        <option value="greeting-3">Mew</option>      
    </select>
    <br>
    
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>
  
  <%- include('includes/footer') %>
  
